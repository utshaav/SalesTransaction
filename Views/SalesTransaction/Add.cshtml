@model Sale

<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add Sale</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div id="modal-content" class="m-b-10">
    <div class="container">
      <form asp-controller="SalesTransaction" asp-action="Add" method="post">
        <div asp-validation-summary="ModelOnly">
          <span class="text-danger">Please correct the following errors</span>
        </div>
        <div class="form-group">
          <label asp-for="CostumerId"></label>
          <select asp-for="CostumerId" asp-items="@ViewBag.CustomerDD"></select>
        </div>
        <div class="form-group">
          <label asp-for="ProductId"></label>
          <select asp-for="ProductId" asp-items="@ViewBag.ProductDD"></select>
        </div>
        <div class="form-group">
          <label asp-for="Quantity"></label>
          <input asp-for="Quantity" type="number" class="form-control" placeholder="3">
        </div>
        <button type="submit" id="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </form>
    </div>
  </div>
  <div class="modal-footer">
    @* <button type="submit" class="btn btn-primary">Save changes</button> *@
  </div>
</div>
